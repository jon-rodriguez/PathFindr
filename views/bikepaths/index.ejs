<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div class="container">
        <h1>All Bike Paths</h1>

        <% for (let bikepath of bikepaths){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <%if(bikepath.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=bikepath.images[0].url%>">
                            <% }else {%>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= bikepath.title %>
                            </h5>
                            <p class="card-text">
                                <%= bikepath.description %>
                            </p>
                            <p class="card-text">
                                <%= bikepath.terrain %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= bikepath.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/bikepaths/<%=bikepath._id%>">View
                                <%=bikepath.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const bikepaths = { features: <%- JSON.stringify(bikepaths) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>

<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Bike Path</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/bikepaths" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="bikepath[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="bikepath[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="terrain">Terrain</label>
                    <textarea class="form-control" type="text" id="terrain" name="bikepath[terrain]" required
                        placeholder="e.g. Asphalt, Concrete, Dirt, Gravel, Other, etc..."></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="bikepath[description]"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-file custom-file">
                            <input type="file" class="form-file-input" id="image" name="image" multiple>
                            <label class="form-file-label" for="image">
                                <span class="form-file-text custom-file-label">Choose image(s)...</span>
                                <span class="form-file-button">Browse</span>
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Path</button>
                    </div>
            </form>
            <a href="/bikepaths">All Bike Paths</a>
        </div>
    </div>